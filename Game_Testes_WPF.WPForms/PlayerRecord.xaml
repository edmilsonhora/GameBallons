<Window x:Class="Game_Testes_WPF.WPForms.PlayerRecord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Testes_WPF.WPForms"
        mc:Ignorable="d"
        Title="Player Record" Height="150" Width="280" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Left">

        <StackPanel Margin="10" HorizontalAlignment="Center">
            <TextBlock FontSize="20">Novo Record</TextBlock>
        </StackPanel>
        <StackPanel Margin="30 10 10 10">
            <TextBlock Text="Nome: "></TextBlock>
            <TextBox x:Name="txtPlayerName" Width="220" MaxLength="20"></TextBox>
        </StackPanel>       

        <StackPanel Margin="10">
            <Button x:Name="btnSalvar" Width="70" Click="btnSalvar_Click">Salvar</Button>
        </StackPanel>
    </StackPanel>



</Window>
